<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xmlns:pro="http://www.liquibase.org/xml/ns/pro"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
      http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.1.xsd
      http://www.liquibase.org/xml/ns/pro
      http://www.liquibase.org/xml/ns/pro/liquibase-pro-4.1.xsd">
<changeSet id="09.create-books-author-relation" author="mishastoma">
    <createTable tableName="books_author">
        <column name="id" type="int" autoIncrement="true">
            <constraints primaryKey="true" nullable="false"/>
        </column>
        <column name="fk_book_id" type="int">
            <constraints nullable="false"/>
        </column>
        <column name="fk_author_id" type="int">
        <constraints nullable="false"/>
    </column>
    </createTable>
    <addForeignKeyConstraint baseColumnNames="fk_book_id"
                             baseTableName="books_author"
                             constraintName="fk_book_id_fk_author"
                             referencedColumnNames="id"
                             referencedTableName="books"/>
    <addForeignKeyConstraint baseColumnNames="fk_author_id"
                             baseTableName="books_author"
                             constraintName="fk_author_id_fk_author"
                             referencedColumnNames="id"
                             referencedTableName="authors"/>

</changeSet>

</databaseChangeLog>